{
  "compilerOptions": {
    "types": ["jest", "node"],
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2015",
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@mdh/frontend-components": [
        "node_modules/@mdh/frontend-components/index.ts"
      ],
      "routing": ["webpack/routing.ts"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": [
    "./src/**/tests/**/*",
    "node_modules",
    "mock-server",
    "./src/form-components/FileUploader/*",
    "./src/utils/helpers.ts"
  ]
}
