{
  "compilerOptions": {
    "types": ["jest", "node"],
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2015",
    "jsx": "react",
    "resolveJsonModule": true,
    "skipLibCheck" : true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@estimateone/frontend-components": ["node_modules/@estimateone/frontend-components/index.ts"],
      "routing": ["webpack/routing.ts"]
    }
  },
  "include" : [
      "./src/**/*",
      "./*"
  ],
  "exclude" : [
      "./src/**/tests/**/*",
      "node_modules"
  ]
}
